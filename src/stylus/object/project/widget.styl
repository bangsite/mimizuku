.{_prefix}p-widget {
	&__title {
		_margin(0, 0, .25, 0);
		_font-size-line-height(_base-font-size * 1.25);
	}

	&.widget_recent_entries,
	&.widget_recent_comments,
	&.widget_archive,
	&.widget_categories,
	&.widget_meta,
	&.widget_pages,
	&.widget_nav_menu {
		ul {
			_list-unstyled();

			> li {
				margin: 0;
				padding: 0;

				li { padding-left: 1em; }
				li li { padding-left: 2em; }
				li li li { padding-left: 3em; }
				li li li li { padding-left: 4em; }
				li li li li li { padding-left: 5em; }

				ul {
					ul { margin-left: -1em; }
					ul ul { margin-left: -2em; }
					ul ul ul { margin-left: -3em; }
					ul ul ul ul { margin-left: -4em; }
				}
			}
		}
	}

	&.widget_recent_entries {
		.post-date {
			display: block;
			color: _color-gray;
			_font-size-line-height(_base-font-size-px - 2);
		}
	}

	&.widget_calendar {
		table {
			width: 100%;

			caption {
				_font-size-line-height(14px);
				font-weight: bold;
				_padding(0, 0, .5);
				letter-spacing: .2em;
			}

			th, td {
				_font-size-line-height(12px);
				_padding(.25, .5);
			}

			thead th, tbody td {
				text-align: center;

				> a {
					display: inline-block;
					background-color: _lighter(_color-gray);
					border-radius: 2px;
					color: _color-text;
					width: 24px;
					margin: -2px -5px;
					padding: 2px 0;
					text-decoration: none;
					_transition-all();

					+_hover() {
						opacity: .8;
					}
				}
			}

			tfoot {
				#prev {
					text-align: left;
				}

				#next {
					text-align: right;
				}

				a {
					color: _color-text;
				}
			}
		}

		#next {
			text-align: right;
		}
	}

	&.widget_tag_cloud {
		a {
			mimizuku-fa("\f02b");
			background-color: _lightest(_color-gray);
			border: 1px solid _lighter(_color-gray);
			border-radius: 3px;
			color: _color-gray;
			_font-size-line-height(12px);
			margin: 4px 0 0;
			padding: 1px 6px;
			text-decoration: none;
			_transition-all();

			+_hover() {
				opacity: .8;
			}

			&::before {
				margin-right: 3px;
			}
		}
	}
}
