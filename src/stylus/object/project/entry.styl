.{bs-prefix}p-entry {
	&__header {
		bs-margin-bottom(2);
	}

	&__title {
		bs-margin-bottom(.5);
		bs-font-size-line-height(bs-base-font-size * 2);
		font-weight: bold;
	}

	> .{bs-prefix}p-response {
		bs-margin(2, 0, 0);
		border-top: 1px solid bs-light(bs-color-gray);
		bs-padding(1, 0, 0);

		> .{bs-prefix}p-trackbacks {
			bs-margin(2, 0, 0);
		}
	}
}
